@inherits LayoutComponentBase


<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
<MudAppBar Elevation="1" Style="background-color:white;box-shadow: 0 0 11px rgba(33,33,33,.2);">

        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Dark" Edge="Edge.Start" OnClick="@ToggleDrawer" />


        <MudSpacer ></MudSpacer>


        <MudContainer>
            <MudAvatar Color="Color.Tertiary">SU</MudAvatar><MudAvatar Color="Color.Secondary">Ka</MudAvatar>
        </MudContainer>
        <MudSpacer />

        
        <ECommerce.Client.Components.LoginLogoutButton></ECommerce.Client.Components.LoginLogoutButton>

    </MudAppBar>

    <MudDrawer @bind-Open="@open" Breakpoint="@breakpoint" Elevation="1" Variant="@DrawerVariant.Responsive" PreserveOpenState="@preserveOpenState">
        
        <MudDrawerHeader Class="d-flex justify-content-center align-items-center">
             <MudText Typo="Typo.h6" Class="text-center">Your Lab<MudIcon Icon="@Icons.Material.Filled.EmojiEmotions" Color="Color.Tertiary"></MudIcon> </MudText>
        </MudDrawerHeader>

        <NavMenuLinks/>

    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>

</MudLayout>

<style>

</style>


@code {
    bool open = false;
    bool preserveOpenState = false;
    Breakpoint breakpoint = Breakpoint.Lg;

    void ToggleDrawer()
    {
        open = !open;
    }
}